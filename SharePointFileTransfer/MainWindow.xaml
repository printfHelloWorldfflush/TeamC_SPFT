<Window x:Class="SharePointFileTransfer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharePointFileTransfer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu Margin="0,0,0,279">
            <MenuItem Header="Monitor" Height="40" Click="MonitorItem_Click"></MenuItem>
            <MenuItem Header="Change Credentials" Height="40" Click="ChangeCredential_Click"></MenuItem>
            <MenuItem Header="Setting" Height="40" Click="SettingItem_Click"></MenuItem>
        </Menu>
        <Frame x:Name="frame" Height="279" Margin="0,40,0,0" VerticalAlignment="Top" IsTabStop="False" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
