<Page x:Class="SharePointFileTransfer.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SharePointFileTransfer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SettingPage">

    <Grid>
        <Button x:Name="OpenFileDialogTB" Content="OpenFileDialog" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" Width="104" Height="27" Click="OpenFileDialogTB_Click"/>
        <TextBox x:Name="fullFilePathTB" HorizontalAlignment="Left" Height="48" Margin="76,10,0,0" TextWrapping="Wrap" Text="" IsReadOnly="True" VerticalAlignment="Top" Width="214"/>
        <Label x:Name="fullFilePathLB" Content="File Path:" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Height="23" Width="61"/>
        <Button x:Name="UpdateFilePath" Content="Update File Path" HorizontalAlignment="Left" Margin="186,75,0,0" VerticalAlignment="Top" Width="104" Height="27" Click="UpdateFilePath_Click" />
    </Grid>
</Page>
