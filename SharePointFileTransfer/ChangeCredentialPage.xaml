<Page x:Class="SharePointFileTransfer.ChangeCredentialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SharePointFileTransfer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ChangeCredentialPage">

    <Grid>
        <PasswordBox x:Name="PasswortTB" HorizontalAlignment="Left" Margin="79,102,0,0" VerticalAlignment="Top" Width="211" Height="27"/>
        <Button x:Name="UpdateCredential" Content="Update Credentials" HorizontalAlignment="Left" Margin="175,160,0,0" VerticalAlignment="Top" Width="115" Click="UpdateCredential_Click"/>
        <Label x:Name="PasswortLB" Content="Passwort:" HorizontalAlignment="Left" Margin="20,102,0,0" VerticalAlignment="Top" Height="27"/>
        <TextBox x:Name="UsernameTB" HorizontalAlignment="Left" Height="27" Margin="79,47,0,0"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="211"/>
        <Label x:Name="UsernameLB" Content="Username:" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Height="27"/>

    </Grid>
</Page>
